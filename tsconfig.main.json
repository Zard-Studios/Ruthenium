{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "noEmit": false,
        "outDir": "dist/main",
        "rootDir": "src/main",
        "types": [
            "node"
        ]
    },
    "include": [
        "src/main/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/renderer/**/*"
    ]
}