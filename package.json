{
    "name": "ruthenium-browser",
    "version": "0.1.0",
    "description": "A Firefox-based browser with advanced multi-profile management",
    "main": "dist/main/main.js",
    "homepage": "./",
    "scripts": {
        "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
        "dev:renderer": "vite",
        "dev:main": "tsc -p tsconfig.main.json && electron dist/main/main.js",
        "build": "npm run build:renderer && npm run build:main",
        "build:renderer": "vite build",
        "build:main": "tsc -p tsconfig.main.json",
        "build:all": "npm run build && npm run package",
        "package": "electron-builder",
        "package:mac": "electron-builder --mac",
        "package:win": "electron-builder --win",
        "package:linux": "electron-builder --linux",
        "test": "vitest --run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
    },
    "keywords": [
        "browser",
        "firefox",
        "multi-profile",
        "privacy",
        "electron"
    ],
    "author": "Ruthenium Browser Team",
    "license": "MIT",
    "devDependencies": {
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.5.1",
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/ui": "^1.1.0",
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jsdom": "^23.0.1",
        "prettier": "^3.1.1",
        "typescript": "^5.3.3",
        "vite": "^5.0.10",
        "vitest": "^1.1.0"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sqlite3": "^5.1.6",
        "uuid": "^11.1.0"
    },
    "build": {
        "appId": "com.ruthenium.browser",
        "productName": "Ruthenium Browser",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "node_modules/**/*"
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        }
    }
}
