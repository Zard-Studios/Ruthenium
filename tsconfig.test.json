{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "vitest/globals",
            "@testing-library/jest-dom"
        ],
        "noEmit": true
    },
    "include": [
        "src/**/*",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}